<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <particlesystem>
    <name>tiresmoke-right</name>
    <texture>tiresmoke.png</texture>

    <emissive>false</emissive>
    <lighting>false</lighting>

    <attach>world</attach>

    <placer>
      <type>point</type>
    </placer>

    <shooter>
      <theta-min-deg>130</theta-min-deg>
      <theta-max-deg>135</theta-max-deg>
      <phi-min-deg>-1.5</phi-min-deg>
      <phi-max-deg>1.5</phi-max-deg>
      <speed-mps>
        <property>velocities/airspeed-kt</property>
        <factor>0.2</factor>
      </speed-mps>
      <rotation-speed>
        <x-min-deg-sec>0</x-min-deg-sec>
        <y-min-deg-sec>0</y-min-deg-sec>
        <z-min-deg-sec>0</z-min-deg-sec>
        <x-max-deg-sec>0</x-max-deg-sec>
        <y-max-deg-sec>0</y-max-deg-sec>
        <z-max-deg-sec>0</z-max-deg-sec>
      </rotation-speed>
    </shooter>

    <counter>
      <particles-per-sec>
        <property>velocities/airspeed-kt</property>
        <factor>1</factor>
      </particles-per-sec>
    </counter>

    <align>billboard</align>

    <particle>
      <start>
        <color>
          <red><value>   0.85 </value></red>
          <green><value> 0.85 </value></green>
          <blue><value>  1 </value></blue>
          <alpha><value> 0.1 </value></alpha>
        </color>
        <size>
          <value>0.5</value>
        </size>
      </start>

      <end>
        <color>
          <red><value>   0.75 </value></red>
          <green><value> 0.75 </value></green>
          <blue><value>  0.9 </value></blue>
          <alpha><value> 0.0001 </value></alpha>
        </color>
        <size>
          <value>2</value>
        </size>
      </end>

      <life-sec>
        <value>1</value>
      </life-sec>

      <mass-kg>10</mass-kg>
      <radius-m>10</radius-m>
    </particle>

    <program>
      <fluid>   air  </fluid>
      <gravity> true </gravity>
      <wind>    true </wind>
    </program>

  </particlesystem>


</PropertyList>
